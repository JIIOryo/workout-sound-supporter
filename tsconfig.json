{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    // デコレーターを使用する
    "experimentalDecorators": true,
    // ソースマップファイルを生成する
    "sourceMap": true,
    // コンパイル後のファイル出力先
    "outDir": "./dist",
    // ベースとなるURL
    "baseUrl": "./src",
    "paths": {
      "@": ["."],
      "@/*": ["./*"],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./dist/",
    "./node_modules/",
  ]
}
